<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ProductActivity">

    <ImageView
        android:id="@+id/producto_imagen"
        android:layout_width="368dp"
        android:layout_height="179dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/logo_descripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/producto_nombre_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/producto_imagen"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/producto_imagen"
        tools:text="Nombre" />

    <TextView
        android:id="@+id/producto_precio_row"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_below="@+id/producto_nombre_row"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|end"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/producto_nombre_row"
        tools:text="18,99â‚¬/ud" />

    <TextView
        android:id="@+id/producto_descripcion_row"
        android:layout_width="378dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/producto_precio_row"
        tools:text="Descripcion" />

    <ImageButton
        android:id="@+id/btn_menos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/btn_mas_row"
        android:background="@null"
        android:onClick="restarCantidad"
        android:scaleType="fitXY"
        android:src="@drawable/ic_remove_circle"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/descripcion_boton_menos" />

    <TextView
        android:id="@+id/producto_cantidad_row"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        tools:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_menos" />


    <ImageButton
        android:id="@+id/btn_mas_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/producto_cantidad_row"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:onClick="sumarCantidad"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/producto_cantidad_row"
        android:contentDescription="@string/descripcion_boton_mas" />

    <Button
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/producto_cantidad_row"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_rounded_border"
        android:onClick="agregarCarrito"
        android:text="@string/anadir_boton_producto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>